<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrozdziakJankowski.BeerCatalog.UI.AddBeerPage"
             Title="Add Beer">
    <StackLayout Padding="20">
        <Entry x:Name="beerNameEntry" Placeholder="Beer Name" />
        <Entry x:Name="alcoholContentEntry" Placeholder="Alcohol Content" Keyboard="Numeric" />

        <Picker x:Name="beerTypePicker" Title="Select Beer Type">
        </Picker>

        <Picker x:Name="producerPicker" Title="Select Producer">
        </Picker>

        <Button Text="Add Beer" Clicked="OnAddBeerClicked" />
    </StackLayout>
</ContentPage>
