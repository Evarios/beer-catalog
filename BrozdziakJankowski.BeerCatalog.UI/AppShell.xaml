<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="BrozdziakJankowski.BeerCatalog.UI.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:BrozdziakJankowski.BeerCatalog.UI"
       Shell.FlyoutBehavior="Disabled"
       Title="BrozdziakJankowski.BeerCatalog.UI">

    <ShellItem>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        <ShellContent Title="Add Producer" ContentTemplate="{DataTemplate local:AddProducerPage}" Route="AddProducerPage" />
        <ShellContent Title="Producer List" ContentTemplate="{DataTemplate local:ProducerListPage}" Route="ProducerListPage" />
        <ShellContent Title="Add Beer" ContentTemplate="{DataTemplate local:AddBeerPage}" Route="AddBeerPage" />
        <ShellContent Title="Beer List" ContentTemplate="{DataTemplate local:BeerListPage}" Route="BeerListPage" />
        <!-- Add other pages here -->
    </ShellItem>
</Shell>
